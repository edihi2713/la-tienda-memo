<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">

			<h1 class="text-center"><%= @action %> Categoría</h1>
			<%= form_for @category do |f| %>
			<% if @category.errors.any? %>
			   <div id="error_explanation">
			     <h2><%= pluralize(@category.errors.count, "error") %> prohibited
			     this category from being saved:</h2>
			     <ul>
			       <% @category.errors.full_messages.each do |message|  %>
			       <li><%= message %></li>
			       <% end %>
			     </ul>
			   </div>
			 <% end %>
				<div class="form-group">
					<strong>Name:</strong>
					<%= f.text_field :name, class: "form-control input-lg" ,placeholder: "Ingresa el nombre de la categoría" %>
				</div>
				<div class="form-group">
					<strong>Descripción:</strong>
					<%= f.text_area :description, class: "form-control input-lg" ,placeholder: "Ingresa la descripción" %>
				</div>

				<div class="actions">
          			<%= link_to 'Cancel', categories_path, class: 'btn btn-danger' %>
          			<%= f.submit 'Grabar categoría', class: 'btn btn-success' %>
        		</div>

			<% end %>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<h1>Categorías</h1>

			<table class = "table">
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Description</th>
					<th>Creado en</th>
					<th>Actions</th>
				</tr>
				<% @categories.each do |category| %>
					<tr>
						<td><%= category.id %></td>
						<td><%= category.name %></td>
						<td><%= category.description%></td>
						<td><%= category.created_at %></td>
						<td>
						   <button type="button" class="btn btn-info"><%= link_to 'View', category  %></button> - 
						  <button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_category_path(category) %></button> -
						  <button type="button" class="btn btn-danger"><%= link_to 'Remove', category, method: :delete, data: { confirm: 'Are you sure to delete this category?' } %></button>
						</td>
					</tr>
				<% end %>
			</table>
			<div class="text-left">
        <%= link_to "Crear Categoría", new_category_path, class: "btn btn-primary" %>
      </div>
		</div>
	</div>
</div>


